{
    "name": "sdpi-components",
    "version": "2.0.1",
    "description": "Web components for your Stream Deck plugin; take the hassle out of the property inspector.",
    "main": "./dist/sdpi-components.js",
    "scripts": {
        "build": "rollup -c",
        "build:dev": "rollup -c --dev",
        "format": "prettier --config .prettierrc './src/**/*.ts' --write",
        "install:example": "node ./scripts/install-example.js",
        "lint": "eslint . --ext .ts",
        "postinstall": "npm run build:dev && npm run install:example",
        "start": "rollup -c -w & npm run start:example",
        "start:example": "onchange './example/**/*.*' -- npm run install:example",
        "test": "jest --verbose",
        "test:watch": "jest --watch --verbose"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/GeekyEggo/sdpi-components.git"
    },
    "keywords": [
        "stream-deck",
        "stream",
        "deck",
        "property-inspector"
    ],
    "author": "GeekyEggo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/GeekyEggo/sdpi-components/issues"
    },
    "homepage": "https://sdpi-components.dev",
    "dependencies": {
        "@lit-labs/task": "^1.1.2",
        "lit": "^2.2.3"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-typescript": "^8.3.2",
        "@trivago/prettier-plugin-sort-imports": "^3.2.0",
        "@types/jest": "^27.5.0",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "fs-extra": "^10.0.1",
        "jest": "^28.1.0",
        "jest-websocket-mock": "^2.3.0",
        "onchange": "^7.1.0",
        "prettier": "^2.6.1",
        "rollup": "^2.72.1",
        "rollup-plugin-minify-html-literals": "^1.2.6",
        "rollup-plugin-terser": "^7.0.2",
        "ts-jest": "^28.0.2",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4"
    }
}

