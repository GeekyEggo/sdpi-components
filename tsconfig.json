{
    "compilerOptions": {
        /* core */
        "target": "ES2016",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist/lib",
        /* config */
        "noImplicitAny": true,
        "strict": true,
        "removeComments": true,
        "sourceMap": true,
        "esModuleInterop": true /* Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports. Implies 'allowSyntheticDefaultImports'. */,
        /* typings */
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ],
    },
    "exclude": [
        "node_modules"
    ]
}
